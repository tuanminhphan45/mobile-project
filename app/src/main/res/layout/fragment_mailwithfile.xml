<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MailwithfileFragment"
    android:background="#FFEAEB">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/profileSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"

        android:background="#ffffff"
        android:elevation="4dp"
        android:padding="16dp"
        android:layout_marginBottom="8dp">

        <!-- Profile Picture -->
        <ImageView
            android:id="@+id/profilePicture"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/profilepic" />

        <!-- User Name -->
        <TextView
            android:id="@+id/userName"
            android:layout_width="137dp"
            android:layout_height="19dp"
            android:layout_toEndOf="@id/profilePicture"
            android:layout_marginStart="8dp"
            android:text="@string/Luke"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Time Ago -->
        <TextView
            android:id="@+id/timeAgo"
            android:layout_width="40dp"
            android:layout_height="17dp"
            android:layout_toEndOf="@id/profilePicture"
            android:layout_below="@id/userName"
            android:layout_marginStart="8dp"
            android:text="1h ago"
            android:textColor="@android:color/darker_gray"
            android:textSize="13sp" />

        <!-- User Email -->

        <!-- Trash Icon -->
        <TextView
            android:id="@+id/userEmail"
            android:layout_width="103dp"
            android:layout_height="17dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="13dp"
            android:text="@string/lukemail"
            android:textColor="#A9A9A9"
            android:textSize="13sp" />



        <!-- Menu Icon -->

    </RelativeLayout>

    <!-- Mail Content Title -->

    <!-- Mail Body -->

    <!-- Action Buttons -->

    <TextView
        android:id="@+id/mailContent"
        android:layout_width="304dp"
        android:layout_height="31dp"
        android:layout_below="@id/profileSection"
        android:layout_marginStart="16dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="16dp"
        android:text="@string/my_favorite_song"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/mailBody"
        android:layout_width="342dp"
        android:layout_height="382dp"
        android:layout_above="@+id/actionButtons"
        android:layout_below="@id/mailContent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="95dp"
        android:text="@string/fav_song"
        android:textColor="#000000"
        android:textSize="19sp" />

    <LinearLayout
        android:id="@+id/actionButtons"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:weightSum="2">

        <Button
            android:id="@+id/forwardButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#FFDDDD"
            android:text="Forward"
            android:textColor="#611717" />

        <Button
            android:id="@+id/replyButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:backgroundTint="#E13535"
            android:text="Reply"
            android:textColor="#ffffff" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_above="@id/actionButtons"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="18dp"
        android:src="@drawable/song">

    </ImageView>


    <TextView
        android:layout_width="135dp"
        android:layout_height="22dp"
        android:layout_above="@id/actionButtons"
        android:layout_marginStart="13dp"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="50dp"
        android:layout_toEndOf="@+id/imageView"
        android:text="@string/my_favorite_song"
        android:textSize="18sp">

    </TextView>
    <TextView
        android:layout_width="31dp"
        android:layout_height="17dp"
        android:layout_above="@id/actionButtons"
        android:layout_marginStart="13dp"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="20dp"
        android:layout_toEndOf="@+id/imageView"
        android:text="3Mb"
        android:textSize="15sp"
        android:textColor="#AAAAAA">

    </TextView>

</RelativeLayout>
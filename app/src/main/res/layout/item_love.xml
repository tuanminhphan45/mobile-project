<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingVertical="8dp"
    android:paddingHorizontal="16dp">

    <!-- Row Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- First Column: ImageView -->
        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/profile_picture"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/profile_desc"/>

        <!-- Second Column: Two TextViews -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_name"
                android:textAppearance="@style/bluer"
                android:singleLine="true"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/main_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="@string/main_name"
                android:textAppearance="@style/highlight"
                android:singleLine="true"
                android:ellipsize="end"/>
        </LinearLayout>

        <!-- Third Column: Time and Star Icon -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:id="@+id/time_sent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time_sent"
                android:textAppearance="@style/bluer"
                android:gravity="end"
                android:singleLine="true"
                android:ellipsize="end"/>

            <ImageView
                android:id="@+id/star_active"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star_active"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Content TextView with Ellipsis -->
    <TextView
        android:id="@+id/content"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/content"
        android:lineSpacingExtra="4sp"
        android:maxLines="3"
        android:ellipsize="end"
        android:text="@string/content"/>

    <!-- Divider Line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="?android:attr/listDivider" />
</LinearLayout>
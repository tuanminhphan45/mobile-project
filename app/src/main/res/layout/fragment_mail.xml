<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/mail"
    tools:context=".Fragment.MailFragment">


    <RelativeLayout
        android:id="@+id/actionButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="60dp"
        android:layout_gravity="center_horizontal"
        android:paddingVertical="15dp"
        android:paddingHorizontal="20dp"
        android:background="@color/white"
        >

        <ImageButton
            android:id="@+id/backButton"
            android:contentDescription="@string/backbtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_back_arrow"
            android:layout_gravity="center"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>

        <ImageButton
            android:id="@+id/trashButton"
            android:contentDescription="@string/trashbtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_trash"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_gravity="center"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="48dp"
            android:layout_centerVertical="true"
            />

        <ImageButton
            android:id="@+id/menuButton"
            android:contentDescription="@string/menubtm"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_options"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_gravity="center|end"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#FFF6F4">
            <LinearLayout
                android:layout_width="match_parent"
                android:minHeight="550dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:padding="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/backButton">

                <LinearLayout
                    android:id="@+id/userProfileLayout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="12dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/profileImage"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:contentDescription="@string/profileimage"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/profile_picture"
                        android:src="@drawable/profile_picture" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="12dp">


                        <TextView
                            android:id="@+id/userName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/email_name"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/userEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/userName"
                            android:layout_alignParentEnd="true"
                            android:text="@string/kris13_gmail_com"
                            android:textColor="#808080"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/timeAgo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/userName"
                            android:text="@string/_1h_ago"
                            android:textColor="#808080"
                            android:textSize="14sp" />

                    </RelativeLayout>
                </LinearLayout>

            <TextView
                android:id="@+id/email_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="@string/email_subject"
                android:textAppearance="@style/email_subject"/>

            <TextView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:lineSpacingExtra="5sp"
                android:text="@string/email_content"
                android:textAppearance="@style/email_content"
                android:translationY="-2.65sp" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/mailBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="120dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:paddingVertical="16dp"
        android:paddingHorizontal="30dp">

        <Button
            android:layout_marginTop="15dp"
            android:id="@+id/forwardBtn"
            android:contentDescription="@string/btnforword"
            android:layout_width="159dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            style="?android:attr/buttonBarButtonStyle"
            android:text="@string/forwardText"
            android:drawableLeft="@drawable/forward_icon"
            android:gravity="center"
            android:backgroundTint="@color/button_background"
            android:textColor="#611717"/>

        <Button
            android:layout_marginTop="15dp"
            android:id="@+id/replyBtn"
            android:layout_width="159dp"
            android:layout_height="50dp"
            android:gravity="center"
            style="?android:attr/buttonBarButtonStyle"
            android:drawableLeft="@drawable/reply_icon"
            android:layout_weight="1"
            android:text="@string/replyText"
            android:layout_marginStart="8dp"
            android:backgroundTint="#D9534F"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.FloderFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FFF6F4">

        <TextView
            android:layout_marginTop="30dp"
            android:id="@+id/default_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default123"
            android:textSize="24sp"
            android:textColor="#000000"
            android:fontFamily="sans-serif-medium"
            android:paddingBottom="16dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="14dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/star2_icon__" />
            <TextView
                android:id="@+id/starred_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/starred"
                android:textSize="16sp"
                android:textColor="#000000"
                android:paddingStart="16dp"/>

            <TextView
                android:id="@+id/starred_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_47_emails"
                android:textSize="14sp"
                android:textColor="#666666"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="14dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/clock_icon" />
            <TextView
                android:id="@+id/read_later_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/read_later"
                android:textSize="16sp"
                android:textColor="#000000"
                android:paddingStart="16dp"/>

            <TextView
                android:id="@+id/read_later_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_16_emails"
                android:textSize="14sp"
                android:textColor="#666666"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="14dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/paperplane_icon" />
            <TextView
                android:id="@+id/sent_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/sent"
                android:textSize="16sp"
                android:textColor="#000000"
                android:paddingStart="16dp"/>

            <TextView
                android:id="@+id/sent_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_245_emails"
                android:textSize="14sp"
                android:textColor="#666666"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="14dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/warning_icon" />

            <TextView
                android:id="@+id/spam_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Spam"
                android:textSize="16sp"
                android:textColor="#000000"
                android:paddingStart="16dp"/>

            <TextView
                android:id="@+id/spam_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24 emails"
                android:textSize="14sp"
                android:textColor="#666666"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="14dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/trash_icon" />
            <TextView
                android:id="@+id/trash_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/trash"
                android:textSize="16sp"
                android:textColor="#000000"
                android:paddingStart="16dp"/>

            <TextView
                android:id="@+id/trash_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_14_emails"
                android:textSize="14sp"
                android:textColor="#666666"/>
        </LinearLayout>

        <TextView
            android:id="@+id/created_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Created"
            android:textSize="24sp"
            android:textColor="#000000"
            android:fontFamily="sans-serif-medium"
            android:paddingTop="24dp"
            android:paddingBottom="16dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/like_icon" />

            <TextView
                android:id="@+id/funny_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Funny"
                android:textSize="16sp"
                android:textColor="#000000"
                android:paddingStart="16dp"/>

            <TextView
                android:id="@+id/funny_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="26 emails"
                android:textSize="14sp"
                android:textColor="#666666"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/pencil_and_ruler_icon" />

            <TextView
                android:id="@+id/days_of_ui_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="100 days of UI"
                android:textSize="16sp"
                android:textColor="#000000"
                android:paddingStart="16dp"/>

            <TextView
                android:id="@+id/days_of_ui_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="31 emails"
                android:textSize="14sp"
                android:textColor="#666666"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/heart_icon" />

            <TextView
                android:id="@+id/jim_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Jim"
                android:textSize="16sp"
                android:textColor="#000000"
                android:paddingStart="16dp"/>

            <TextView
                android:id="@+id/jim_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11 emails"
                android:textSize="14sp"
                android:textColor="#666666"/>
        </LinearLayout>

    </LinearLayout>


</FrameLayout>
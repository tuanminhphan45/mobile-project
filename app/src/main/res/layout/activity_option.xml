<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/option_board">


        <!--        Forward-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:clipToOutline="true"
            >

            <ImageView
                android:id="@+id/forward_icon"
                android:src="@drawable/arrow"
                android:layout_width="25.81dp"
                android:layout_height="32dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="22dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="13dp"
                android:lineSpacingExtra="8sp"
                android:translationY="-3.79sp"
                android:gravity="right|top" />

            <Button
                android:id="@+id/forwardMail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="left"
                android:paddingStart="65dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="Forward"
                android:textSize="15sp"
                android:textColor="#212121" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD" />

        <!--        Folder-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:clipToOutline="true"
            >

            <ImageView
                android:id="@+id/folder"
                android:src="@drawable/text"
                android:layout_width="25.81dp"
                android:layout_height="32dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="22dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="13dp"
                android:lineSpacingExtra="8sp"
                android:translationY="-3.79sp"
                android:gravity="right|top" />

            <Button
                android:id="@+id/addMail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="left"
                android:paddingStart="65dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="Add to folder"
                android:textSize="15sp"
                android:textColor="#212121" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD" />

        <!--        Spam-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:clipToOutline="true"
            >

            <ImageView
                android:id="@+id/spam"
                android:src="@drawable/warning"
                android:layout_width="25.81dp"
                android:layout_height="32dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="22dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="13dp"
                android:lineSpacingExtra="8sp"
                android:translationY="-3.79sp"
                android:gravity="right|top" />

            <Button
                android:id="@+id/reportMail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="left"
                android:paddingStart="65dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="Report spam"
                android:textSize="15sp"
                android:textColor="#212121" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD" />

        <!--        Delete-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:clipToOutline="true"
            >

            <ImageView
                android:id="@+id/delete"
                android:src="@drawable/trash"
                android:layout_width="25.81dp"
                android:layout_height="32dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="22dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="13dp"
                android:lineSpacingExtra="8sp"
                android:translationY="-3.79sp"
                android:gravity="right|top" />

            <Button
                android:id="@+id/deleteMail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="left"
                android:paddingStart="65dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="Delete"
                android:textSize="15sp"
                android:textColor="#E13535" />

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>
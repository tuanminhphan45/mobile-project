<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="inbox_bluer">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#66000000</item>
        <item name="singleLine">true</item>
        <item name="android:ellipsize">end</item>

    </style>
    <style name="inbox_subject">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
        <item name="singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="inbox_content">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#99000000</item>
    </style>

    <style name="email_subject">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="email_content">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#CC000000</item>
    </style>
    <style name="title_folder">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <style name="content_folder">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="sub_folder">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#666666</item>
    </style>

    <style name="name_header">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:shadowColor">#40000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <style name="fab" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        
        <item name="android:backgroundTint">@color/red</item>
    </style>

    <style name="circle">
        <item name="cornerSize">50%</item>
    </style>
    <style name="BackButtonStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_gravity">center|start</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="TrashButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_gravity">center|end</item>
    </style>
    <style name="ReplyForward">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_width">159dp</item>
        <item name="android:layout_height">43dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="image">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:scaleType">centerCrop</item>

    </style>
</resources>